---
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <div class="aitomic-site-wrapper">
      <div class="container mx-auto max-w-4xl">
        <h1 class="text-2xl font-bold">{title}</h1>
        <article class="prose">
          <slot />
        </article>
      </div>
    </div>
  </body>
</html>

<style>
  @import "../styles/tomic.css";
</style>

<style>
  /* Scope aitomic styles to only apply within the wrapper, excluding ComponentCard */
  .aitomic-site-wrapper :global(.not-prose) {
    all: revert;
    /* font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
      "Helvetica Neue", Arial, sans-serif; */
  }

  /* Re-enable essential layout for not-prose elements */
  .aitomic-site-wrapper :global(.not-prose) {
    display: block;
    box-sizing: border-box;
  }

  .aitomic-site-wrapper :global(.not-prose *) {
    font-family: inherit;
  }
</style>
