---
const { title, collection, slug } = Astro.props;
const jsonUrl = collection && slug ? `/${collection}/r/${slug}.json` : null;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <div class="aitomic-site-wrapper">
      <div class="container mx-auto max-w-4xl">
        <div class="flex justify-between items-center">
          <h1 class="text-2xl font-bold">{title}</h1>
          {
            jsonUrl && (
              <a href={jsonUrl} class="text-sm text-gray-500">
                Registry
              </a>
               <a href={`https://v0.app/chat/api/open?url=${jsonUrl}`}><img
                  src="https://v0.app/chat-static/button.svg"
                  alt="Open in v0"
                  width="99"
                  height="32"
                /></a>
            )
          }
         
        </div>
        <article class="prose">
          <slot />
        </article>
      </div>
    </div>
  </body>
</html>

<style>
  @import "../styles/tomic.css";
</style>

<style>
  /* Scope aitomic styles to only apply within the wrapper, excluding ComponentCard */
  .aitomic-site-wrapper :global(.not-prose) {
    all: revert;
    /* font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
      "Helvetica Neue", Arial, sans-serif; */
  }

  /* Re-enable essential layout for not-prose elements */
  .aitomic-site-wrapper :global(.not-prose) {
    display: block;
    box-sizing: border-box;
  }

  .aitomic-site-wrapper :global(.not-prose *) {
    font-family: inherit;
  }
</style>
