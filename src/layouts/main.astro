---
import "../styles/global.css";
import Prose from "../components/Prose.astro";
import Button from "../components/Button.astro";
const { title, collection, slug } = Astro.props;
const jsonUrl = collection && slug ? `/${collection}/r/${slug}.json` : null;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <div class="container mx-auto max-w-4xl">
      <Prose>
        <div class="flex items-center justify-between py-20">
          <h1 class="text-4xl font-medium">{title}</h1>
          {
            jsonUrl && (
              <Button
                href={jsonUrl}
                variant="outline"
                title="View component JSON"
                class="text-sm"
              >
                <svg
                  slot="icon"
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <rect width="14" height="14" x="8" y="8" rx="2" ry="2" />
                  <path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2" />
                </svg>
                Registry
              </Button>
            )
          }
        </div>
        <article class="prose">
          <slot />
        </article>
      </Prose>
    </div>
  </body>
</html>
